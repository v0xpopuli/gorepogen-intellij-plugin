<idea-plugin url="https://www.jetbrains.com/idea">
    <name>GoRepoGen</name>
    <id>gorepogen.intellij.plugin.gorepogen-intellij-plugin</id>
    <vendor email="vadim.rozhkalns@gmail.com" url="https://github.com/v0xpopuli/gorepogen-intellij-plugin">v0xpopuli
    </vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages</resource-bundle>

    <version>1.0.0</version>

    <description><![CDATA[
    <h1>GoRepoGen</h1>
    <div>Integrates <a href="https://github.com/v0xpopuli/gorepogen">GoRepoGen</a> utility into IDE.<br>
    GoRepoGen provides ability to repositories auto generation for entities.</div>
    <ol>
    <li> Highlight entity you want to generate repository for.</li>
    <li> Ctrl+Alt+G then.</li>
    <li> Voila, repository ready to use.</li>
    </ol>
    ]]>
    </description>

    <actions>
        <action id="gorepogen.intellij.plugin.GenerateAction" class="gorepogen.intellij.plugin.GenerateAction"
                text="Generate">
            <add-to-group group-id="GenerateGroup" anchor="after"
                          relative-to-action="gorepogen.intellij.plugin.GenerateAction"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt G"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="gorepogen.intellij.plugin.GenerationService"/>
    </extensions>

</idea-plugin>